<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="inherit_navbar_apps_menu"
       t-inherit="web.NavBar.AppsMenu"
       t-inherit-mode="extension">
        <xpath expr="//div[contains(@class, 'o_navbar_apps_menu')]" position="before">
           <a class="logo_main_page" t-on-click="logoClick" style="cursor:pointer;">
                <img src="/operdo_hrm/static/src/img/operdo_main_page.svg"
                     alt="Logo" height="40"/>
           </a>
        </xpath>
    </t>
    <t id="extension_brand_logo" t-inherit="website.placeholder_header_brand" t-inherit-mode="extension">
        <xpath expr="//a[@data-name='Navbar Logo']/span" position="replace">
            <img src="/operdo_hrm/static/src/img/operdo_logo.svg"
                 alt="Logo" height="40"/>
        </xpath>
    </t>
    <t id="inherit_navbar_apps_icon" t-inherit="web.NavBar.AppsMenu" t-inherit-mode="extension">
        <xpath expr="//i[contains(@class, 'oi oi-apps')]" position="replace">
            <i class="fa fa-bars"/>
        </xpath>
    </t>
    <t id="inherit_navbar_apps_icon_reponsive" t-inherit="web_responsive.AppsMenu" t-inherit-mode="extension">
        <xpath expr="//i[contains(@class, 'oi oi-apps')]" position="replace">
            <i class="fa fa-bars"/>
        </xpath>
    </t>
    <t id="extension_manage_database" t-inherit="web.login_layout" t-inherit-mode="extension">
        <xpath expr="." position="replace">
            <t>
                <t t-set="html_data" t-value="{'style': 'height: 100%;'}"/>
                <t t-set="body_classname" t-value="'bg-100'"/>
                <t t-set="no_header" t-value="True"/>
                <t t-set="no_footer" t-value="True"/>
            </t>
        </xpath>
    </t>
</templates>
