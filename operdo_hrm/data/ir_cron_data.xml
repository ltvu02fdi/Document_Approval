<odoo>
    <record id="ir_cron_sync_attendance" model="ir.cron">
        <field name="name">Sync ZK Attendance</field>
        <field name="model_id" ref="operdo_hrm.model_zk_device"/>
        <field name="state">code</field>
        <field name="code">model.sync_attendance()</field>
        <field name="active">True</field>
        <field name="interval_number">3</field>
        <field name="interval_type">hours</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(hours=3)).replace(minute=0, second=0, microsecond=0)"/>
    </record>
    <record id="ir_cron_expires_contract" model="ir.cron">
        <field name="name">Update expires contract</field>
        <field name="model_id" ref="operdo_hrm.model_operdo_warning_contract"/>
        <field name="state">code</field>
        <field name="code">model._cron_about_expire_contract()</field>
        <field name="active">True</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).replace(hour=0, minute=1, second=0, microsecond=0)"/>
    </record>
</odoo>
