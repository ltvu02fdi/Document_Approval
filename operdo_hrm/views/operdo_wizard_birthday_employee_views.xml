<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_birthday_wizard_form" model="ir.ui.view">
            <field name="name">employee.birthday.wizard.form</field>
            <field name="model">employee.birthday.wizard</field>
            <field name="arch" type="xml">
                <form string="Search Employee by Birthday" class="my_custom_form_class">
                    <group col="2">
                        <field name="date_start" class="oe_inline"/>
                        <field name="date_end" class="oe_inline"/>
                    </group>
                    <footer>
                        <button string="Search" type="object" name="action_search" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
    <record id="action_employee_birthday_wizard" model="ir.actions.act_window">
        <field name="name">Employee Birthday Search</field>
        <field name="res_model">employee.birthday.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'dialog_size': 'medium'}</field>
    </record>

    <menuitem id="menu_employee_birthday_wizard"
              name="Employee Birthday List"
              parent="hr_warning"
              action="action_employee_birthday_wizard"
              sequence="101"/>
</odoo>
