<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_operdo_warning_contract_list" model="ir.ui.view">
            <field name="name">operdo.warning.contract.list</field>
            <field name="model">operdo.warning.contract</field>
            <field name="arch" type="xml">
                <list string="Contract Warnings">
                    <field name="id_employee"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="job_title"/>
                    <field name="start_date_company"/>
                    <field name="contract_type_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="contract_id"/>
                </list>
            </field>
        </record>

        <record id="view_operdo_warning_contract_form" model="ir.ui.view">
            <field name="name">operdo.warning.contract.form</field>
            <field name="model">operdo.warning.contract</field>
            <field name="arch" type="xml">
                <form string="Warning">
                    <sheet>
                        <group>
                            <field name="id_employee"/>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                            <field name="job_title"/>
                            <field name="start_date_company"/>
                            <field name="contract_type_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="contract_id" domain="[('employee_id', '=', employee_id)]"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_operdo_warning_contract" model="ir.actions.act_window">
            <field name="name">Contract Warning</field>
            <field name="res_model">operdo.warning.contract</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No contract warning found.
                </p>
            </field>
        </record>
        <menuitem
            id="hr_warning"
            name="Warning"
            parent="hr.menu_hr_root"
            sequence="99"/>
        <menuitem
            id="contract_warning"
            name="Contract Warning"
            parent="hr_warning"
            action="action_operdo_warning_contract"
            sequence="1"/>
    </data>
</odoo>