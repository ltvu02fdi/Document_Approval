<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_attendance_calendar" model="ir.ui.view">
            <field name="name">hr.attendance.calendar</field>
            <field name="model">hr.attendance</field>
            <field name="arch" type="xml">
                <calendar string="Attendances"
                          date_start="check_in"
                          date_stop="check_out"
                          event_open_popup="true"
                          quick_create="0"
                          >
                    <field name="employee_id"/>
                    <field name="check_in"/>
                    <field name="check_out"/>
                    <field name="work_day"/>
                </calendar>
            </field>
        </record>
        <record id="inherit_hr_attendance_list_view" model="ir.ui.view">
            <field name="name">hr.attendance.list.view.inherit</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='color']" position="after">
                    <field name="work_day" optional="hide"/>
                </xpath>
            </field>
        </record>
        <record id="hr_attendance_action_calendar_view" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="hr_attendance.hr_attendance_action"/>
            <field name="view_mode">calendar</field>
            <field name="view_id" ref="view_attendance_calendar"/>
            <field name="sequence">1</field>
        </record>

    </data>
</odoo>
