<odoo>
    <record id="document_date_list_view" model="ir.ui.view">
        <field name="name">document.date.list.view</field>
        <field name="model">document.date</field>
        <field name="arch" type="xml">
            <list>
                <field name="date" optional="show"/>
                <field name="company_id" optional="show" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>
    <record id="document_date_form_view" model="ir.ui.view">
        <field name="name">document.date.form.view</field>
        <field name="model">document.date</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date" readonly="1"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="company_id" readonly="1" force_save="1" groups="base.group_multi_company"
                                   options="{'no_edit': True, 'no_create': True}"/>
                        </group>
                        <group>
                            <field name="day_number_of_week" readonly="1"/>
                            <field name="day_number_of_month" readonly="1"/>
                            <field name="day_number_of_year" readonly="1"/>
                            <field name="month" readonly="1"/>
                        </group>
                        <group>
                            <field name="calendar_month_number" readonly="1"/>
                            <field name="calendar_month_label" readonly="1"/>
                            <field name="calendar_year_number" readonly="1"/>
                            <field name="calendar_year_label" readonly="1"/>
                            <field name="iso_week_number_of_year" readonly="1"/>
                            <field name="quarter" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="o_attachment_preview"/>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="document_date_action" model="ir.actions.act_window">
        <field name="name">Document date</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">document.date</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>