<odoo>
    <record id="cash_inflows_list_view" model="ir.ui.view">
        <field name="name">cash.inflows.list.view</field>
        <field name="model">cash.inflows</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="date_entry" force_save="1"/>
                <field name="category_id" required="1" options="{'no_edit': True, 'no_create': True}"/>
                <field name="code_category"/>
                <field name="amount" required="1"/>
                 <field name="description_receipt"/>
                <field name="document_date_id" column_invisible="1"/>
                <field name="document_date" required="1"/>
                <field name="document_code"/>
                <field name="payer"/>
                <field name="department_id" required="1"/>
                <field name="company_id" optional="show" groups="base.group_multi_company" readonly="1"/>
            </list>
        </field>
    </record>

        <!-- Pivot View -->
    <record id="view_cash_inflows_pivot" model="ir.ui.view">
        <field name="name">cash.inflows.pivot</field>
        <field name="model">cash.inflows</field>
        <field name="arch" type="xml">
            <pivot string="Cash Inflows Analysis">
                <field name="document_date" type="row"/>
                <field name="category_id" type="col"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_cash_inflows_graph" model="ir.ui.view">
        <field name="name">cash.inflows.graph</field>
        <field name="model">cash.inflows</field>
        <field name="arch" type="xml">
            <graph string="Cash Inflows Chart" type="bar">
                <field name="document_date" type="row"/>
                <field name="category_id" type="col"/>
                <field name="amount" type="measure"/>
            </graph>
        </field>
    </record>


    <record id="cash_inflows_action" model="ir.actions.act_window">
        <field name="name">Cash Inflows</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cash.inflows</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="view_ids"
               eval="[(5,0,0),
        (0, 0, {'view_mode': 'list', 'view_id': ref('cash_inflows_list_view')})]"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

        <!-- Ưu tiên hiển thị graph view -->
    <record id="action_cash_inflows_analysis_view_graph" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_cash_inflows_graph"/>
        <field name="act_window_id" ref="cash_inflows_action"/>
    </record>

    <record id="action_overview_finance" model="ir.actions.client">
        <field name="name">Overview Finance</field>
        <field name="tag">cash.main_layout_action</field>
        <field name="context">{'type_dashboard': 'financial'}</field>
    </record>

    <record id="action_overview_inflow" model="ir.actions.client">
        <field name="name">Overview Inflow</field>
        <field name="tag">cash.main_layout_action</field>
        <field name="context">{'type_dashboard': 'inflow'}</field>
    </record>

    <record id="action_overview_outflow" model="ir.actions.client">
        <field name="name">Overview Outflow</field>
        <field name="tag">cash.main_layout_action</field>
        <field name="context">{'type_dashboard': 'outflow'}</field>
    </record>

    <record id="action_overview_planned_expenditure" model="ir.actions.client">
        <field name="name">Overview Planned Expenditure</field>
        <field name="tag">cash.main_layout_action</field>
        <field name="context">{'type_dashboard': 'planned_expenditure'}</field>
    </record>

</odoo>