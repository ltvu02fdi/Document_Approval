<odoo>
    <record id="cash_outflows_list_view" model="ir.ui.view">
        <field name="name">cash.outflows.list.view</field>
        <field name="model">cash.outflows</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="date_entry" required="1"/>
                <field name="category_id" required="1"/>
                <field name="code_category"/>
                <field name="amount"/>
                 <field name="description_receipt" required="1"/>
                <field name="document_date" required="1"/>
                <field name="document_code" required="1"/>
                <field name="payer" required="1"/>
                <field name="department_id" required="1"/>
                <field name="company_id" optional="show" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="cash_outflows_action" model="ir.actions.act_window">
        <field name="name">Cash Outflows</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cash.outflows</field>
        <field name="view_mode">list</field>
        <field name="view_ids"
               eval="[(5,0,0),
        (0, 0, {'view_mode': 'list', 'view_id': ref('cash_outflows_list_view')})]"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
</odoo>