<odoo>
    <record id="planned_expenditure_list_view" model="ir.ui.view">
        <field name="name">planned.expenditure.list.view</field>
        <field name="model">planned.expenditure</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="date_entry" required="1"/>
                <field name="category_id" required="1"/>
                <field name="code_category"/>
                <field name="plan_expenditure_date" required="1"/>
                <field name="amount" required="1"/>
                 <field name="description_receipt" />
                <field name="department_id" required="1"/>
                <field name="company_id" optional="show" groups="base.group_multi_company" readonly="1"/>
            </list>
        </field>
    </record>

        <record id="view_planned_expenditure_pivot" model="ir.ui.view">
        <field name="name">planned.expenditure.pivot</field>
        <field name="model">planned.expenditure</field>
        <field name="arch" type="xml">
            <pivot string="Cash Outflows Analysis">
                <field name="plan_expenditure_date" type="row"/>
                <field name="category_id" type="col"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_cash_outflows_graph" model="ir.ui.view">
        <field name="name">planned.expenditure.graph</field>
        <field name="model">planned.expenditure</field>
        <field name="arch" type="xml">
            <graph string="Cash Outflows Chart" type="bar">
                <field name="plan_expenditure_date" type="row"/>
                <field name="category_id" type="col"/>
                <field name="amount" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="planned_expenditure_action" model="ir.actions.act_window">
        <field name="name">Planned Expenditure</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">planned.expenditure</field>
        <field name="view_mode">list,pivot,graph</field>
        <field name="view_ids"
               eval="[(5,0,0),
        (0, 0, {'view_mode': 'list', 'view_id': ref('planned_expenditure_list_view')})]"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
</odoo>